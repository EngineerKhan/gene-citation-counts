# Join GeneID and RefSeq ID

sort -t$'\t' -nk2 ~/data/genbank-data/human/human_gene2refseq > ~/data/genbank-data/human/sorted_human_gene2refseq
sort -t$'\t' -nk2 ~/data/genbank-data/human/human_gene_info > ~/data/genbank-data/human/sorted_human_gene_info

